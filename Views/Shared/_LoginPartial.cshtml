@if (Context.User.Identity.Name != null)
{
	<form asp-controller="UserAccount" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
		<ul cllass="nav navbar-nav navbar-right">
			<li>Hello @Context.User.Identity.Name!</li>
			<li><button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button></li>
		</ul>
	</form>
}
else
{
	<ul cllass="nav navbar-nav navbar-right">
		<li><a class="nav-link text-dark" asp-controller="UserAccount" asp-action="Registration">Register</a></li>
		<li><a class="nav-link text-dark" asp-controller="UserAccount" asp-action="Login">Login</a></li>
	</ul>
}